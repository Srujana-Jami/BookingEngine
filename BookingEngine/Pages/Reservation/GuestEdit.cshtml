@page
@model BookingEngine.Pages.Reservation.GuestEditModel

@{
    ViewData["Title"] = "GuestEdit";
}
<style>
body { background-image: url('https://www.mccullyhouseinn.com/wp-content/uploads/2018/03/Rm-9-7.jpg'); background-repeat: no-repeat; background-attachment: fixed; background-size: 100% 100%; }
</style>
<h1 class="text-center">Please! Check Guest and Payment details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Guest.GuestID" />
            <h1 style="color:crimson">Guest Info</h1>
            <div class="form-group">
                <label asp-for="Guest.FirstName" class="control-label"></label>
                <input asp-for="Guest.FirstName" class="form-control" />
                <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.LastName" class="control-label"></label>
                <input asp-for="Guest.LastName" class="form-control" />
                <span asp-validation-for="Guest.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.HomeAddress" class="control-label"></label>
                <input asp-for="Guest.HomeAddress" class="form-control" />
                <span asp-validation-for="Guest.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.EmailAddress" class="control-label"></label>
                <input asp-for="Guest.EmailAddress" class="form-control" />
                <span asp-validation-for="Guest.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.PhoneNumber" class="control-label"></label>
                <input asp-for="Guest.PhoneNumber" class="form-control" />
                <span asp-validation-for="Guest.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.City" class="control-label"></label>
                <input asp-for="Guest.City" class="form-control" />
                <span asp-validation-for="Guest.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.ZipCode" class="control-label"></label>
                <input asp-for="Guest.ZipCode" class="form-control" />
                <span asp-validation-for="Guest.ZipCode" class="text-danger"></span>
            </div>
            <br />
            <h2 style="color:crimson">Payment Info</h2>
            <div class="form-group">
                <label asp-for="Guest.CreditCardNumber" class="control-label"></label>
                <input asp-for="Guest.CreditCardNumber" class="form-control" />
                <span asp-validation-for="Guest.CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.FullNameOnCard" class="control-label"></label>
                <input asp-for="Guest.FullNameOnCard" class="form-control" />
                <span asp-validation-for="Guest.FullNameOnCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.ExpiryDate" class="control-label"></label>
                <input asp-for="Guest.ExpiryDate" class="form-control" />
                <span asp-validation-for="Guest.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guest.CVV" class="control-label"></label>
                <input asp-for="Guest.CVV" class="form-control" />
                <span asp-validation-for="Guest.CVV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

